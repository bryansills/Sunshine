<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="@string/prefs_location_label"
        android:key="@string/prefs_location_key"
        android:defaultValue="@string/prefs_location_default_value"
        android:inputType="text"
        android:singleLine="true"/>

    <ListPreference
        android:title="@string/prefs_units_label"
        android:key="@string/prefs_units_key"
        android:defaultValue="@string/prefs_units_metric"
        android:entryValues="@array/prefs_units_values"
        android:entries="@array/prefs_units_options"/>

</PreferenceScreen>
